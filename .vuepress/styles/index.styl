// 自定义样式，参考 ygpy.net 设计
.home-blog {
  // 首页背景渐变
  .hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
    position: relative;
    overflow: hidden;
    
    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: url('/bg-gradient.jpg') center/cover;
      opacity: 0.3;
      z-index: -1;
    }
    
    .hero-info {
      position: relative;
      z-index: 1;
      
      .hero-img {
        border-radius: 50%;
        border: 4px solid rgba(255, 255, 255, 0.8);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        
        &:hover {
          transform: scale(1.05);
          box-shadow: 0 12px 48px rgba(0, 0, 0, 0.15);
        }
      }
      
      h1 {
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        
        @media (max-width: 768px) {
          font-size: 2.5rem;
        }
      }
      
      .description {
        font-size: 1.5rem;
        color: rgba(255, 255, 255, 0.9);
        margin-bottom: 0.5rem;
        font-weight: 600;
      }
      
      .tagline {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 2rem;
      }
      
      .action-button {
        margin: 0.5rem;
        padding: 12px 24px;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
        
        &.primary {
          background: linear-gradient(135deg, #667eea, #764ba2);
          border: none;
          color: white;
          
          &:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
          }
        }
        
        &.secondary {
          background: rgba(255, 255, 255, 0.2);
          border: 2px solid rgba(255, 255, 255, 0.3);
          color: white;
          backdrop-filter: blur(10px);
          
          &:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-2px);
          }
        }
      }
    }
  }
  
  // 特色功能卡片
  .home-blog-wrapper {
    .blog-list {
      .abstract-wrapper {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: 1px solid rgba(0, 0, 0, 0.05);
        
        &:hover {
          transform: translateY(-5px);
          box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        }
        
        .abstract-item {
          padding: 1.5rem;
          
          .title {
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 0.8rem;
            color: #2c3e50;
            
            a {
              color: inherit;
              text-decoration: none;
              
              &:hover {
                color: #667eea;
              }
            }
          }
          
          .abstract {
            color: #666;
            line-height: 1.6;
            margin-bottom: 1rem;
          }
          
          .tags {
            .tag-item {
              background: linear-gradient(135deg, #667eea, #764ba2);
              color: white;
              padding: 4px 12px;
              border-radius: 15px;
              font-size: 0.85rem;
              margin-right: 0.5rem;
              margin-bottom: 0.5rem;
              display: inline-block;
              transition: all 0.3s ease;
              
              &:hover {
                transform: scale(1.05);
              }
            }
          }
        }
      }
    }
  }
}

// 归档页面样式
.page {
  .content-wrapper {
    .content {
      // 机场推荐卡片样式
      .airport-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        margin-bottom: 2rem;
        padding: 1.5rem;
        border: 1px solid rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        
        &:hover {
          transform: translateY(-3px);
          box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        }
        
        .airport-header {
          display: flex;
          justify-content: space-between;
          align-items: center;
          margin-bottom: 1rem;
          
          .airport-name {
            font-size: 1.5rem;
            font-weight: 700;
            color: #2c3e50;
          }
          
          .airport-status {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            
            &.recommended {
              background: linear-gradient(135deg, #667eea, #764ba2);
              color: white;
            }
            
            &.popular {
              background: linear-gradient(135deg, #f093fb, #f5576c);
              color: white;
            }
            
            &.new {
              background: linear-gradient(135deg, #4facfe, #00f2fe);
              color: white;
            }
          }
        }
        
        .airport-description {
          color: #666;
          margin-bottom: 1.5rem;
          font-size: 1.1rem;
          line-height: 1.6;
        }
        
        .airport-info {
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
          gap: 1rem;
          margin-bottom: 1.5rem;
          
          .info-item {
            text-align: center;
            
            .label {
              font-size: 0.9rem;
              color: #999;
              margin-bottom: 0.5rem;
            }
            
            .value {
              font-weight: 600;
              color: #2c3e50;
              font-size: 1.1rem;
            }
          }
        }
        
        .airport-action {
          text-align: center;
          
          .try-button {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 10px 24px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            display: inline-block;
            transition: all 0.3s ease;
            
            &:hover {
              transform: translateY(-2px);
              box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
              color: white;
            }
          }
        }
      }
      
      // 推广横幅样式
      .promotion-banner {
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 15px;
        padding: 2rem;
        margin: 2rem 0;
        color: white;
        text-align: center;
        
        .banner-title {
          font-size: 2rem;
          font-weight: 700;
          margin-bottom: 0.5rem;
        }
        
        .banner-subtitle {
          font-size: 1.2rem;
          margin-bottom: 1.5rem;
          opacity: 0.9;
        }
        
        .banner-features {
          display: flex;
          justify-content: center;
          gap: 2rem;
          margin-bottom: 1.5rem;
          flex-wrap: wrap;
          
          .feature-item {
            background: rgba(255, 255, 255, 0.2);
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 0.9rem;
            backdrop-filter: blur(10px);
          }
        }
        
        .banner-action {
          .action-button {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            padding: 12px 24px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            display: inline-block;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.3);
            
            &:hover {
              background: rgba(255, 255, 255, 0.3);
              transform: translateY(-2px);
              color: white;
            }
          }
        }
      }
    }
  }
}

// 侧边栏样式优化
.sidebar {
  .sidebar-links {
    .sidebar-group {
      .sidebar-heading {
        font-weight: 600;
        color: #2c3e50;
        border-bottom: 2px solid #667eea;
        padding-bottom: 0.5rem;
        margin-bottom: 1rem;
      }
      
      .sidebar-links {
        .sidebar-link {
          a {
            color: #666;
            transition: all 0.3s ease;
            
            &:hover {
              color: #667eea;
              transform: translateX(5px);
            }
            
            &.active {
              color: #667eea;
              font-weight: 600;
            }
          }
        }
      }
    }
  }
}

